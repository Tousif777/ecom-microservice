# Payment Service Environment Variables
NODE_ENV=development
PORT=3004

# Database Configuration
DATABASE_URL="postgresql://admin:admin123@postgres:5432/myapp?schema=payment_service"
# For local development: DATABASE_URL="postgresql://admin:admin123@localhost:5432/myapp?schema=payment_service"

# Redis Configuration
REDIS_URL=redis://redis:6379
# For local development: REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672
# For local development: RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal Configuration (optional)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Payment Configuration
DEFAULT_CURRENCY=USD
PAYMENT_TIMEOUT_SECONDS=300
REFUND_PROCESSING_FEE=0.30
